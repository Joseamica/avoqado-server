/// Venue-level commission configuration.
/// Defines the base commission rates and rules for a venue.
model CommissionConfig {
  id      String @id @default(cuid())
  venueId String
  venue   Venue  @relation(fields: [venueId], references: [id], onDelete: Cascade)

  name        String // "Default Config", "Holiday Promo", etc.
  description String? @db.Text

  // Priority for multiple configs (higher = higher priority, OVERRIDE strategy)
  priority Int @default(0)

  // Base commission rate (percentage of sale)
  baseRate Decimal @db.Decimal(5, 4) // e.g., 0.0300 (3%)

  // What to include in commission calculation
  includeTips Boolean @default(true) // Include tips in commission base

  // Commission trigger: when to calculate
  trigger CommissionTrigger @default(PER_PAYMENT)

  // Filter conditions (null = applies to all)
  applicableRoles          StaffRole[] // Empty = all roles
  applicableCategories     String[] // Product category IDs (empty = all)
  applicablePaymentMethods PaymentMethod[] // Empty = all methods

  // Period this config is valid for
  effectiveFrom DateTime
  effectiveTo   DateTime?

  // Status
  active Boolean @default(true)

  // Soft delete
  deletedAt DateTime?
  deletedBy String?

  // Relations
  overrides    CommissionOverride[]
  tiers        CommissionTier[]
  milestones   CommissionMilestone[]
  calculations CommissionCalculation[]

  // Audit
  createdById String?
  createdBy   Staff?  @relation("CommissionConfigCreatedBy", fields: [createdById], references: [id], onDelete: SetNull)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([venueId])
  @@index([active])
  @@index([effectiveFrom])
  @@index([priority])
}

/// Per-staff commission overrides.
/// Allows specific staff members to have different rates than the venue default.
model CommissionOverride {
  id String @id @default(cuid())

  configId String
  config   CommissionConfig @relation(fields: [configId], references: [id], onDelete: Cascade)

  // Staff member this override applies to
  staffId String
  staff   Staff  @relation(fields: [staffId], references: [id], onDelete: Cascade)

  venueId String
  venue   Venue  @relation(fields: [venueId], references: [id], onDelete: Cascade)

  // Override rate (replaces base rate from config)
  overrideRate Decimal @db.Decimal(5, 4)

  // Reason for override (audit trail)
  reason String? @db.Text

  // Period this override is valid for
  effectiveFrom DateTime
  effectiveTo   DateTime?

  // Status
  active Boolean @default(true)

  // Soft delete
  deletedAt DateTime?
  deletedBy String?

  // Audit
  createdById String?
  createdBy   Staff?  @relation("CommissionOverrideCreatedBy", fields: [createdById], references: [id], onDelete: SetNull)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([configId, staffId, effectiveFrom])
  @@index([staffId])
  @@index([venueId])
  @@index([configId])
  @@index([active])
}

/// Tiered commission rates.
/// After reaching certain thresholds, commission rate increases.
/// Example: 0-100 sales = 3%, 101-500 sales = 4%, 500+ sales = 5%
model CommissionTier {
  id String @id @default(cuid())

  configId String
  config   CommissionConfig @relation(fields: [configId], references: [id], onDelete: Cascade)

  // Tier threshold (minimum to qualify for this tier)
  thresholdType  CommissionThresholdType // SALES_COUNT, SALES_AMOUNT
  thresholdValue Decimal                 @db.Decimal(12, 2) // e.g., 100 (sales) or 50000.00 (amount)

  // Rate for this tier
  rate Decimal @db.Decimal(5, 4) // e.g., 0.0400 (4%)

  // Description
  name        String? // "Silver Tier", "Gold Tier"
  description String? @db.Text

  // Period for threshold calculation
  periodType CommissionPeriodType @default(MONTHLY) // Reset period

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([configId, thresholdType, thresholdValue])
  @@index([configId])
}

/// Commission milestones with bonuses.
/// One-time or recurring bonuses for reaching specific goals.
/// Example: "100 sales in a month = $500 bonus"
model CommissionMilestone {
  id String @id @default(cuid())

  configId String
  config   CommissionConfig @relation(fields: [configId], references: [id], onDelete: Cascade)

  name        String // "Century Club", "Monthly MVP"
  description String? @db.Text

  // Milestone criteria
  thresholdType  CommissionThresholdType // SALES_COUNT, SALES_AMOUNT
  thresholdValue Decimal                 @db.Decimal(12, 2)

  // Bonus amount (fixed amount, not percentage)
  bonusAmount Decimal @db.Decimal(10, 2)

  // Recurrence
  periodType  CommissionPeriodType @default(MONTHLY)
  isRecurring Boolean              @default(true) // Can be achieved multiple times

  // Status
  active Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  achievements CommissionMilestoneAchievement[]

  @@index([configId])
  @@index([active])
}

/// Record of milestone achievements by staff.
/// Tracks when staff members hit milestones.
model CommissionMilestoneAchievement {
  id String @id @default(cuid())

  milestoneId String
  milestone   CommissionMilestone @relation(fields: [milestoneId], references: [id], onDelete: Cascade)

  staffId String
  staff   Staff  @relation(fields: [staffId], references: [id], onDelete: Cascade)

  venueId String
  venue   Venue  @relation(fields: [venueId], references: [id], onDelete: Cascade)

  // Achievement details
  achievedAt  DateTime
  periodStart DateTime // Start of the period when achieved
  periodEnd   DateTime // End of the period when achieved
  bonusAmount Decimal  @db.Decimal(10, 2) // Amount awarded

  // Link to payout (if paid)
  payoutId String?
  payout   CommissionPayout? @relation(fields: [payoutId], references: [id], onDelete: SetNull)

  createdAt DateTime @default(now())

  @@unique([milestoneId, staffId, periodStart]) // One achievement per milestone per period
  @@index([staffId])
  @@index([venueId])
  @@index([achievedAt])
}

/// Immutable record of commission calculated for a payment.
/// Similar to TransactionCost - captures economics at time of transaction.
model CommissionCalculation {
  id String @id @default(cuid())

  // Payment reference (can have multiple calculations for split scenarios)
  paymentId String
  payment   Payment @relation(fields: [paymentId], references: [id], onDelete: Cascade)

  // Staff who earned the commission
  staffId String
  staff   Staff  @relation(fields: [staffId], references: [id], onDelete: Cascade)

  venueId String
  venue   Venue  @relation(fields: [venueId], references: [id], onDelete: Cascade)

  // Config used for calculation (null if config was deleted)
  configId String?
  config   CommissionConfig? @relation(fields: [configId], references: [id], onDelete: SetNull)

  // Calculation details (snapshot at time of calculation)
  baseAmount  Decimal @db.Decimal(12, 2) // Amount commission was calculated on
  tipAmount   Decimal @db.Decimal(10, 2) // Tips included (if applicable)
  totalAmount Decimal @db.Decimal(12, 2) // baseAmount + tipAmount (if includeTips)

  rate             Decimal @db.Decimal(5, 4) // Rate applied (after tier/override)
  commissionAmount Decimal @db.Decimal(10, 2) // Final commission earned

  // Rate source (for audit)
  rateSource CommissionRateSource // BASE, TIER, OVERRIDE

  // Tier info (if applicable)
  tierId   String?
  tierName String? // Snapshot of tier name

  // Refund handling
  isRefund              Boolean                 @default(false)
  originalCalculationId String? // Points to original if this is a refund reversal
  originalCalculation   CommissionCalculation?  @relation("RefundCalculation", fields: [originalCalculationId], references: [id], onDelete: SetNull)
  refundCalculations    CommissionCalculation[] @relation("RefundCalculation")

  // Payout reference
  payoutId String?
  payout   CommissionPayout? @relation(fields: [payoutId], references: [id], onDelete: SetNull)

  // Clawback reference (if refunded after payout)
  clawbackId String?
  clawback   CommissionClawback? @relation(fields: [clawbackId], references: [id], onDelete: SetNull)

  createdAt DateTime @default(now())

  @@index([paymentId])
  @@index([staffId])
  @@index([venueId])
  @@index([payoutId])
  @@index([createdAt])
  @@index([isRefund])
}

/// Aggregated commission summary for reporting.
/// Pre-calculated daily/weekly/monthly totals for fast dashboard queries.
model CommissionSummary {
  id String @id @default(cuid())

  staffId String
  staff   Staff  @relation(fields: [staffId], references: [id], onDelete: Cascade)

  venueId String
  venue   Venue  @relation(fields: [venueId], references: [id], onDelete: Cascade)

  // Period
  periodType  CommissionPeriodType
  periodStart DateTime
  periodEnd   DateTime

  // Aggregates
  totalSalesCount  Int     @default(0)
  totalSalesAmount Decimal @default(0) @db.Decimal(12, 2)
  totalTipsAmount  Decimal @default(0) @db.Decimal(10, 2)
  totalCommission  Decimal @default(0) @db.Decimal(10, 2)
  totalBonuses     Decimal @default(0) @db.Decimal(10, 2) // From milestones
  totalRefunds     Decimal @default(0) @db.Decimal(10, 2) // Negative adjustments
  netCommission    Decimal @default(0) @db.Decimal(10, 2) // commission + bonuses - refunds

  // Current tier (at end of period)
  currentTierName String?

  // Optimistic concurrency
  version Int @default(1)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([staffId, venueId, periodType, periodStart])
  @@index([staffId])
  @@index([venueId])
  @@index([periodType])
  @@index([periodStart])
}

/// Commission payout record.
/// Tracks when commissions were paid out to staff.
model CommissionPayout {
  id String @id @default(cuid())

  staffId String
  staff   Staff  @relation(fields: [staffId], references: [id], onDelete: Cascade)

  venueId String
  venue   Venue  @relation(fields: [venueId], references: [id], onDelete: Cascade)

  // Payout details
  periodStart DateTime
  periodEnd   DateTime

  totalCommission Decimal @db.Decimal(10, 2) // From calculations
  totalBonuses    Decimal @db.Decimal(10, 2) // From milestones
  totalClawbacks  Decimal @db.Decimal(10, 2) // Deductions from refunds after payout
  netAmount       Decimal @db.Decimal(10, 2) // Final payout amount

  // Status
  status CommissionPayoutStatus @default(PENDING)

  // Payment details
  paymentMethod String? // CASH, BANK_TRANSFER, PAYROLL_DEDUCTION
  paymentRef    String? // Reference number
  paidAt        DateTime?

  // Approval
  approvedById String?
  approvedBy   Staff?    @relation("CommissionPayoutApprovedBy", fields: [approvedById], references: [id], onDelete: SetNull)
  approvedAt   DateTime?

  notes String? @db.Text

  // Relations
  calculations CommissionCalculation[]
  achievements CommissionMilestoneAchievement[]
  clawbacks    CommissionClawback[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([staffId])
  @@index([venueId])
  @@index([status])
  @@index([periodStart])
}

/// Commission clawback for refunds after payout.
/// When a payment is refunded after commission was already paid out,
/// this records the amount to be recovered.
model CommissionClawback {
  id String @id @default(cuid())

  staffId String
  staff   Staff  @relation(fields: [staffId], references: [id], onDelete: Cascade)

  venueId String
  venue   Venue  @relation(fields: [venueId], references: [id], onDelete: Cascade)

  // Original payout this clawback applies to
  originalPayoutId String
  originalPayout   CommissionPayout @relation(fields: [originalPayoutId], references: [id], onDelete: Cascade)

  // Amount to recover
  clawbackAmount Decimal @db.Decimal(10, 2)

  // Reason
  reason String @db.Text // "Refund of payment XXX after payout"

  // Status
  status CommissionClawbackStatus @default(PENDING)

  // Recovery details
  recoveredAt      DateTime?
  recoveryMethod   String? // NEXT_PAYOUT, PAYROLL_DEDUCTION, CASH
  recoveryPayoutId String? // ID of payout where this was deducted

  // Relations
  calculations CommissionCalculation[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([staffId])
  @@index([venueId])
  @@index([originalPayoutId])
  @@index([status])
}

// ===== COMMISSION SYSTEM ENUMS =====

enum CommissionTrigger {
  PER_PAYMENT // Calculate commission per payment (handles split payments)
  PER_ORDER // Calculate commission once per order (sum all payments)
}

enum CommissionThresholdType {
  SALES_COUNT // Number of sales/orders
  SALES_AMOUNT // Total sales amount in currency
}

enum CommissionPeriodType {
  DAILY
  WEEKLY
  BIWEEKLY
  MONTHLY
}

enum CommissionRateSource {
  BASE // From CommissionConfig.baseRate
  TIER // From CommissionTier.rate
  OVERRIDE // From CommissionOverride.overrideRate
}

enum CommissionPayoutStatus {
  PENDING // Awaiting approval
  APPROVED // Approved, awaiting payment
  PAID // Payment completed
  CANCELLED // Cancelled
}

enum CommissionClawbackStatus {
  PENDING // Awaiting recovery
  RECOVERED // Amount recovered
  WAIVED // Forgiven (written off)
}

// ===== CREDIT ASSESSMENT ENUMS =====

enum CreditGrade {
  A // Excellent (80-100) - Auto-approve
  B // Good (70-79) - Standard terms
  C // Fair (50-69) - Manual review required
  D // Poor (<50) - Ineligible or special terms
}

enum CreditEligibility {
  ELIGIBLE // Ready for offer
  REVIEW_REQUIRED // Needs manual review
  INELIGIBLE // Does not meet criteria
  OFFER_PENDING // Has active offer waiting response
  ACTIVE_LOAN // Currently has active loan
}

enum TrendDirection {
  GROWING // Positive growth trend
  FLAT // Stable, no significant change
  DECLINING // Negative growth trend
}

enum CreditOfferStatus {
  PENDING // Offer created, waiting for venue response
  ACCEPTED // Venue accepted the offer
  REJECTED // Venue rejected the offer
  EXPIRED // Offer expired without response
  WITHDRAWN // SOFOM withdrew the offer
}
