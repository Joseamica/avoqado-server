  updatedAt DateTime @updatedAt

  @@unique([rawMaterialId, batchNumber])
  @@index([rawMaterialId])
  @@index([venueId])
  @@index([status])
  @@index([receivedDate]) // Critical for FIFO ordering (oldest first)
  @@index([expirationDate]) // For expiration tracking
  @@index([purchaseOrderItemId])
}

